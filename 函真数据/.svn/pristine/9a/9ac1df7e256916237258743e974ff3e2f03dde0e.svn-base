body{
    width: 100%;
    height: 100%;
    background-color: #3d3d3d;
    color: #ccc;
}
/*头部导航栏的设置*/
.function-title {
    width: 100%;
    height: 44px;
    background-color: #343434;
    position: absolute;
    /*top: -44px;*/
    top:0;
    left: 0;
    color: #ccc;
    line-height: 44px;
    font-size: 16px;
}
.function-title a {
    color: #ccc;
    display: inline-block;
    width: 40px;
    position: relative;
}
.function-title a:after {
    position: absolute;
    top: 13px;
    left: 30px;
    display: inline-block;
    content: "";
    width: 1px;
    height: 20px;
    background-color: #969696;
}
.function-title span {
    font-size: 14px;
}
/*新闻内容部分设置*/
.new-list{
    padding: 5px 10px;
}
.new-list .title{
    padding-top: 44px;
    font-size: 16px;
}
.new-list .time{
    font-size: 12px;
    margin-left: 130px;
    color: grey;
}
.new-list .article{
    text-indent: 2em;
    font-size: 14px;
}
