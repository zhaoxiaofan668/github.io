/*新闻列表*/
/*a标签*/
a,a:active,a:hover,a:visited{
  text-decoration: none;
  color: #969696;
}
body{
  width: 100%;
  height: 100%;
  background-color: #3d3d3d;
}
.so-header{
  margin-top: 44px;

}
.media:before{
  content: '';
  display: block;
  clear: both;
}
.news-list .media{
  width: 100%;
  height: 100px;
  padding:10px 0 0;
  margin:0;
  border-bottom: 1px solid #ccc;
}
.news-list .media:last-child{
  border-bottom:none;
}
.news-list .media .media-left{
  width: 30%;
  height: 100%;
  float: left;
}
.news-list .media .media-left img{
  width: 100%;
  display: inline-block;
  height: 70px;

}
.news-list .media-body{
  width: 70%;
  float: left;
  height: auto;
}
/*0000*/
.news-list .header{
  width: 15px;
  height:15px;
  border-radius: 50%;

}
.news-list .other span{
  font-size: 12px;
  color: #666666;
  margin-left: 10px;
}



/*顶部导航栏*/
.function-title {
  width: 100%;
  height: 44px;
  background-color: #343434;
  position: absolute;
  top: -44px;
  left: 0;
  color: #ccc;
  line-height: 44px;
  font-size: 16px;
}
.function-title a {
  color: #ccc;
  display: inline-block;
  width: 40px;
  position: relative;
}
.function-title a:after {
  position: absolute;
  top: 13px;
  left: 30px;
  display: inline-block;
  content: "";
  width: 1px;
  height: 20px;
  background-color: #969696;
}
.function-title span {
  font-size: 14px;
}
