@charset "UTF-8";
body,
html {
  height: 100%;
}
a:visited,
a:active {
  text-decoration: none;
}
.user-main {
  width: 100%;
  height: 91%;
  background-color: #3D3D3D;
  padding: 0;
}
.user-main .user-list {
  padding: 10px;
  background-color: #3D3D3D;
  border: none;
}
.user-main .user-list li {
  background-color: #3D3D3D;
  border: none;
  border-bottom: 1px solid #666;
}
.user-main .user-list li a {
  margin: 0;
  color: #bcbcbc;
  font-size: 14px;
  font-weight: 100;
}
.user-main .user-list li a i {
  margin: 0 10px 0 0;
}
.user-main .user-list li a .middle {
  margin-top: 20px;
}
.user-main .user-list li a p {
  margin: 0;
}
.user-main .user-list li a p .user-color {
  color: #E57E22;
  margin-right: 5px;
}
.user-main .user-list li a span {
  display: inline-block;
  vertical-align: middle;
}
.user-main .user-list li a .img {
  width: 55px;
  height: 55px;
  margin-right: 10px;
}
.user-main .user-list li a .img img {
  width: 55px;
  border-radius: 5px;
}
.user-main .user-list li a .user-name {
  display: inline-block;
}
.user-main .user-bottom {
  width: 100%;
  color: #bcbcbc;
  font-size: 12px;
}
.user-main .user-bottom p {
  width: 100%;
  text-align: center;
  margin: 0;
}
.user-massage {
  width: 100%;
  height: 100%;
  background-color: #3D3D3D;
  padding: 44px 0 45px;
}
.user-massage .user-list {
  padding: 10px;
  background-color: #3D3D3D;
  border: none;
}
.user-massage .user-list li {
  background-color: #3D3D3D;
  border: none;
  border-bottom: 1px solid #666;
}
.user-massage .user-list li a {
  margin: 0;
  color: #bcbcbc;
  font-size: 14px;
  font-weight: 100;
  position: relative;
}
.user-massage .user-list li a .img {
  position: absolute;
  right: 10px;
  top: 0;
  width: 55px;
  height: 55px;
  margin-right: 10px;
}
.user-massage .user-list li a .img img {
  width: 55px;
  border-radius: 5px;
}
.user-massage .user-list .first {
  height: 70px;
}
.user-massage .user-list .last {
  border-bottom: 1px solid #444;
}
.function-title {
  width: 100%;
  height: 44px;
  background-color: #343434;
  position: absolute;
  top: 0;
  left: 0;
  color: #ccc;
  line-height: 44px;
  font-size: 16px;
}
.function-title a {
  color: #ccc;
  display: inline-block;
  width: 40px;
  position: relative;
}
.function-title a:first-child:after {
  position: absolute;
  top: 13px;
  left: 30px;
  display: inline-block;
  content: "";
  width: 1px;
  height: 20px;
  background-color: #969696;
}
.function-title span {
  font-size: 14px;
}
.function-choose {
  width: 100%;
  height: 100%;
  background-color: #3D3D3D;
  padding: 44px 0 45px;
}
.function-choose .text {
  width: 100%;
  color: #bcbcbc;
  font-size: 12px;
  padding: 10px;
  line-height: 2;
}
.function-choose .function-list {
  width: 100%;
  text-align: center;
  border-collapse: collapse;
  border-spacing: 0;
}
.function-choose .function-list tr td {
  padding: 20px 0;
  border: 1px solid #444;
}
.function-choose .function-list tr td a {
  color: #bcbcbc;
  font-size: 12px;
}
.function-choose .function-list tr td a i {
  display: block;
}
.function-choose .function-list tr td .active i {
  color: #007aff;
}
.my-list {
  margin: 0;
  width: 100%;
  height: 100%;
  background-color: #3D3D3D;
  padding: 44px 10px 45px;
}
.my-list li {
  padding: 10px 0;
  border-bottom: 1px solid #444;
}
.my-list li a {
  color: #969696;
}
.my-list .no-read a {
  color: darkorange;
}
.invite-friend {
  width: 100%;
  height: 100%;
  background-color: #3D3D3D;
  padding: 44px 10px 45px;
}
.invite-friend .text {
  width: 100%;
  color: #bcbcbc;
  font-size: 12px;
  padding: 10px;
  line-height: 2;
}
.invite-friend p {
  text-align: center;
  color: #eee;
  font-size: 12px;
}
.invite-friend .invite-success {
  font-size: 16px;
  color: #bcbcbc;
}
.invite-friend .invite-success i {
  font-size: 26px;
  color: darkorange;
  font-weight: bolder;
}
.invite-friend a {
  display: block;
  width: 100%;
  margin: 10px 0;
  padding: 5px 0;
  color: #eee;
  text-align: center;
  border-radius: 5px;
}
.invite-friend .first {
  background-color: red;
}
.invite-friend .last {
  background-color: green;
}
.suggest-back {
  width: 100%;
  height: 100%;
  background-color: #3D3D3D;
  padding: 44px 10px 45px;
}
.suggest-back input {
  outline: none;
  border: none;
  width: 100%;
  color: #969696;
  background-color: #3D3D3D;
  margin: 5px 0;
}
.suggest-back textarea {
  outline: none;
  border: none;
  width: 100%;
  background-color: #3D3D3D;
  margin: 10px 0;
  border-bottom: 1px solid #444;
  border-top: 1px solid #444;
  color: #bcbcbc;
  font-size: 14px;
}
.suggest-back a {
  display: block;
  width: 100%;
  margin: 10px 0;
  padding: 5px 0;
  color: #eee;
  text-align: center;
  border-radius: 5px;
  background-color: red;
}
.suggest-back .text {
  width: 100%;
  color: #bcbcbc;
  font-size: 12px;
  padding: 10px;
  line-height: 2;
}
.user-login {
  width: 100%;
  height: 100%;
  background-color: #3D3D3D;
  padding: 44px 10px 45px;
}
.user-login input {
  outline: none;
  border: none;
  width: 100%;
  color: #ccc;
  background-color: #3D3D3D;
  margin: 0;
  padding: 10px 0;
  border-bottom: 1px solid #444;
}
.user-login .btn {
  display: block;
  width: 100%;
  margin: 15px 0;
  padding: 5px 0;
  color: #eee;
  text-align: center;
  border-radius: 5px;
  background-color: red;
}
.user-login .findPassword {
  display: block;
  font-size: 12px;
  width: 100%;
  color: #ccc;
  text-align: right;
}
.user-login .lineMiddle {
  width: 100%;
  text-align: center;
  position: relative;
  color: #ccc;
  margin: 40px 0 20px;
}
.user-login .lineMiddle:before {
  content: "";
  width: 35%;
  height: 1px;
  background-color: #969696;
  position: absolute;
  left: 0;
  top: 50%;
}
.user-login .lineMiddle:after {
  width: 35%;
  height: 1px;
  content: "";
  background-color: #969696;
  position: absolute;
  right: 0;
  top: 50%;
}
.user-login ul {
  width: 100%;
  display: table;
  margin: 0;
  padding: 0;
}
.user-login ul li {
  display: table-cell;
  list-style: none;
  margin: 0 auto;
}
.user-login ul li a {
  display: table;
  margin: 0 auto;
  text-align: center;
  color: #eee;
  font-size: 12px;
}
.user-login ul li a i {
  display: block;
  width: 50px;
  height: 50px;
  line-height: 50px;
  border-radius: 50%;
  text-align: center;
  padding: 0;
}
.user-register {
  width: 100%;
  height: 100%;
