  padding: 10px 0;
  border-bottom: 1px solid #444;
}
.user-register .btn {
  display: block;
  width: 100%;
  margin: 15px 0;
  padding: 5px 0;
  color: #eee;
  text-align: center;
  border-radius: 5px;
  background-color: red;
}
.user-register .text {
  font-size: 12px;
  color: #ccc;
}
.user-register .lineMiddle {
  width: 100%;
  text-align: center;
  position: relative;
  color: #ccc;
  margin: 40px 0 20px;
}
.user-register .lineMiddle:before {
  content: "";
  width: 35%;
  height: 1px;
  background-color: #969696;
