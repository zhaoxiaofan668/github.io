}
.user-register ul {
  width: 100%;
  display: table;
  margin: 0;
  padding: 0;
}
.user-register ul li {
  display: table-cell;
  list-style: none;
  margin: 0 auto;
}
.user-register ul li a {
  display: table;
  margin: 0 auto;
  text-align: center;
  color: #eee;
  font-size: 12px;
}
.user-register ul li a i {
  display: block;
  width: 50px;
  height: 50px;
  line-height: 50px;
  border-radius: 50%;
  text-align: center;
  padding: 0;
}
